        source: function(request, response) {
            $.ajax({
                url: 'index.php?route=catalog/product/autocomplete&user_token={{ user_token }}&filter_name=' +  encodeURIComponent(request),
                dataType: 'json',
                success: function(json) {
                    response($.map(json, function(item) {
                        return {
                            label: item['name'],
                            value: item['product_id']
                        }
                    }));
                }
            });
        },
        select: function(item) {
            $('input[name=\'product_name7\']').val('');

            $('#data-management-product7' + item['value']).remove();

            $('#data-management-product7').append('<div id="data-management-product7' + item['value'] + '"><i class="fa fa-minus-circle"></i> ' + item['label'] + '<input type="hidden" name="product[]" value="' + item['value'] + '" /></div>');
        }
    });

    $('#data-management-category7').delegate('.fa-minus-circle', 'click', function() {
        let categoryId = $(this).next().val()
        $('#data-management-product7').find('div[data-category-id="' + categoryId + '"]').remove()
        $(this).parent().remove();
    });

    $('#data-management-product7').delegate('.fa-minus-circle', 'click', function() {
        $(this).parent().remove();
    });

    $('#select-products-categories7').on('change', function() {
        let categoryName = $(this).find('option:selected').text()
        let categoryId   = $(this).val()
        $.ajax({
            url: 'index.php?route=extension/module/massive_data_management_nik/getProductsByCategory&user_token={{ user_token }}&category_id=' +  $(this).val(),
            dataType: 'json',
            success: function(json) {
                if(categoryId !== '0') {
                    $('#data-management-category7' + categoryId).remove();
                    $('#data-management-category7').append('<div id="data-management-category7' + categoryId + '"><i class="fa fa-minus-circle"></i> ' + categoryName + '<input type="hidden" name="category[]" value="' + categoryId + '" /></div>');
                }

                let array = $.map(json, function(item) {
                    return {
                        label: item['name'],
                        value: item['product_id'],
                        category_id: item['category_id']
                    }
                })
                for (let item in array) {
                    if(array.hasOwnProperty(item)) {
                        $('#data-management-product7' + array[item]['value']).remove();
                        $('#data-management-product7').append('<div id="data-management-product7' + array[item]['value'] + '" data-category-id="' + array[item]['category_id'] + '"><i class="fa fa-minus-circle"></i> ' + array[item]['label'] + '<input type="hidden" name="product[]" value="' + array[item]['value'] + '" /></div>');
                    }
                }
            }
        });
    })

    $('.products-clear-btn7').on('click', function () {
        clearProductsList7()
    })
    function clearProductsList7() {
        $('#data-management-category7 div').each(function (i, item) {
            $(item).remove()
        })
        $('#data-management-product7 div').each(function (i, item) {
            $(item).remove()
        })
        $('#select-products-categories7 option:first').prop('selected', true);
    }
</script>
